{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["lib/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
