{
  "name": "flow-wing",
  "version": "1.0.4",
  "description": "A simple library to easily build complex flows through composed/piped tasks flows",
  "keywords": [
    "async",
    "compose",
    "concurrent",
    "context",
    "control",
    "flow",
    "parallel",
    "pipe",
    "runner",
    "series",
    "shared",
    "task",
    "waterfall"
  ],
  "homepage": "https://github.com/milsosa/flow-wing#readme",
  "bugs": {
    "url": "https://github.com/milsosa/flow-wing/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/milsosa/flow-wing.git"
  },
  "license": "MIT",
  "author": "Milton Sosa <sosamilton19@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepublishOnly": "npm run build",
    "test": "ava -v",
    "test:watch": "ava -v --watch"
  },
  "xo": {
    "esnext": true,
    "overrides": [
      {
        "files": "examples/**/*.js",
        "rules": {
          "no-unused-vars": 1
        }
      }
    ],
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "capitalized-comments": "off",
      "no-use-extend-native/no-use-extend-native": "off"
    },
    "space": 2
  },
  "dependencies": {
    "debug": "^4.4.1",
    "is-promise": "^4.0.0",
    "lodash.defaults": "^4.2.0",
    "lodash.isfunction": "^3.0.9",
    "lodash.isplainobject": "^4.0.6",
    "lodash.map": "^4.6.0",
    "lodash.partial": "^4.2.1",
    "npm-check-updates": "^18.0.1",
    "verror": "^1.10.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/lodash.defaults": "^4.2.9",
    "@types/lodash.isfunction": "^3.0.9",
    "@types/lodash.isplainobject": "^4.0.9",
    "@types/lodash.map": "^4.6.13",
    "@types/lodash.partial": "^4.2.9",
    "@types/node": "^22.15.30",
    "@types/sinon": "^17.0.4",
    "@types/verror": "^1.10.11",
    "ava": "^6.3.0",
    "axios": "^1.9.0",
    "range": "^0.0.3",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=4"
  }
}
